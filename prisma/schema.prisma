generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/* Template Model */
model Template {
  id        Int    @id @default(autoincrement())
  image     String
  ratio     Float
  width     Int
  height    Int
  fonts     String[]    // Store fonts array as JSON
  pages     Json    // Store pages and their children as a nested JSON
  keywords  Keyword[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt // One-to-many relationship with `Page`
}

model Keyword {
  id        Int    @id @default(autoincrement())
  name      String
  value     String
  templates Template[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}