{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "removeComments": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@/*": ["./*"],
            "@public/*": ["./public/*"],
            "@src/*": ["./src/*"],
            "@models/*": ["./src/models/*"],
            "@services/*": ["./src/services/*"],
            "@utils/*": ["./src/utils/*"]
        },
        "jsx": "react",
        "jsxFactory": "Html.createElement",
        "jsxFragmentFactory": "Html.Fragment"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
